                        </div>
                    </div>
                </div>
                <div class="right-col">
                    <input type="text" id="cityInput" name="cityInput" class="city-input" placeholder="Input place">
                    <button class="btn submit-button" id="submitButton"><i class="fa fa-search fa-1x"></i></button>
                    <div class="fav-cities-wrapper">
                        @foreach(var item in Model)
                        {
                            <p class="fav-cities-button">@item.Geolocation</p>
                        }

                        <div class="divider-line"></div>
                    </div>

                    <div class="weather-details">
                        <div class="row">
                            
                                <div class="col">
                                    <p>Wind speed</p>
                                </div>
                                <div class="col">
                                   <p id="windSpeed" class="results"></p>
                                </div>
                            <div class="w-100"></div>
                            
                                <div class="col">
                                    <p>Cloudy</p>
                                </div>
                                <div class="col">
                                   <p id="cloudiness" class="results"></p>
                                </div>
                            <div class="w-100"></div>
                            
                                <div class="col">
                                   <p>Apparent temp</p>
                                </div>
                                <div class="col">
                                   <p id="feelTemp" class="results"></p>
                                </div>
                            <div class="w-100"></div>
                            <div class="col">
                                   <p>Pressure</p>
                                </div>
                                <div class="col">
                                   <p id="pressure" class="results"></p>
                                </div>
                            <div class="w-100"></div>
                            <div class="col">
                                   <p>Humidity</p>
                                </div>
                                <div class="col">
                                   <p id="humidity" class="results"></p>
                                </div>
                            <div class="w-100"></div>
                            <div class="col">
                                   <p>Temperature min</p>
                                </div>
                                <div class="col">
                                   <p id="tempMin" class="results"></p>
                                </div>
                            <div class="w-100"></div>
                            <div class="col">
                                   <p>Temperature max</p>
                                </div>
                                <div class="col">
                                   <p id="tempMax" class="results"></p>
                                </div>
                            <div class="w-100"></div>
                        </div>
                    </div>
                    <div class="divider-line"></div>
                    <a class="btn-my-weather" asp-action="Index" asp-controller="Home">
                     <div class="textWea" style="width:100%; margin-bottom:20px;">Home</div>
                                        
                    </a>
                </div>
            </div>
        </div>
        <div class="show-map-section container">
            <button class="show-map-button" id="showMapButton">&#x21e3; Map</button>
        </div>
        <div class="map-wrapper container">
            <div id="map-container-google-1" class="z-depth-1-half map-container" style="height: 500px">
                <iframe id="mapIFrame" src="https://maps.google.com/maps?q=&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>